FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY api ./api
COPY temporal_app ./temporal_app
COPY db ./db

# Expose API port
EXPOSE 8000

# Run FastAPI server
CMD ["python", "-m", "api.server"]
